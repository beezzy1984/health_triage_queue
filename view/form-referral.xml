<?xml version="1.0" encoding="UTF-8"?>
<form string="Referral" col="6">
    <group col="8" colspan="6" string="Patient" id="grp_patient">
        <field name="name" colspan="3" />
        <label name="puid" />
        <field name="puid" width="70" />
        <field name="sex" width="50" />
        <label name="age" />
        <field name="age" width="40" />
        <field name="is_local" invisible="1" />
        <field name="is_target" invisible="1" />
        <field name="signed_local" invisible="1" />
        <field name="signed_target" invisible="1" />
    </group>
    <newline />
    <group id="grp_referral_header" colspan="6" col="8">
        <label name="to_institution" />
        <field name="to_institution" colspan="2" />
        <label name="to_specialty" />
        <field name="to_specialty" />
        <label name="referral_date" />
        <field name="referral_date" />
    </group>
    <newline />
    <group id="grp_referral_detail" colspan="6" col="6">
        <label name="referral_type" />
        <field name="referral_type" />
        <label name="service_requested" />
        <field name="service_requested" />
        <label name="to_appointment" />
        <field name="to_appointment" />
        <newline />
        <separator name="reason" xexpand="1" colspan="6" /><newline />
        <field name="reason" xexpand="1" colspan="6" />
    </group>
    <newline />
    <separator name="results" xexpand="1" colspan="6" /><newline />
    <field name="results" xexpand="1" colspan="6" /><newline />
    <group id="grp_origin_footer" colspan="6" col="4">
        <label name="from_encounter" />
        <field name="from_encounter" />
        <label name="from_triage" />
        <field name="from_triage" />
        <label name="from_institution" />
        <field name="from_institution" />
        <label name="referred_by" />
        <field name="referred_by" />
    </group>
    <group id="grp_referral_footer" colspan="6" col="6">
        <label name="referer" />
        <field name="referer" />
        <label name="referer_sign_date" />
        <field name="referer_sign_date" />
        <button icon="health-certify" name="btn_sign_local" string="Sign"
            help="Lock changes and enable the record to be sent off." 
            xexpand="0" xalign="1.0" />
        <newline />
        <label name="referee" />
        <field name="referee" />
        <label name="referee_sign_date" />
        <field name="referee_sign_date" />
        <button icon="health-certify" name="btn_sign_target" string="Sign"
            help="Lock changes and enable the record to be sent off." 
            xexpand="0" xalign="1.0" />
    </group>
</form>